namespace Tests {

    class StringTests {
        import Am.Lang
        import Am.Tests
        
        test stringBuilder() {
            var sb = new StringBuilder()
            sb.add("hello").add(" ").add("world")
            var str = sb.toString()
            
            Assert.assertEquals("hello world", str)
        }
        
        test stringBuilderMultipleAdds() {
            var sb = new StringBuilder()
            sb.add("a")
            sb.add("b")
            sb.add("c")
            var str = sb.toString()
            
            Assert.assertEquals("abc", str)
        }
        
        test stringInterpolation() {
            var x = 5
            var s = "x = $x"
            
            Assert.assertEquals("x = 5", s)
        }
        
        test stringInterpolationWithExpression() {
            var x = 5
            var b = 10
            var s = "x = $x, b = ${b}"
            
            Assert.assertEquals("x = 5, b = 10", s)
        }
        
        test stringConcatenation() {
            var str1 = "hello"
            var str2 = "world"
            var result = str1 + " " + str2
            
            Assert.assertEquals("hello world", result)
        }
    }
}
