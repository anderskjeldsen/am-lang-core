
namespace Am.IO.Networking
{

    class SslCert(var value: String)
    {
        import Am.Lang
        import Am.IO

        static fun load(filename: String): SslCert {
            var file = new File(filename)
            var fs = new FileStream(file)
            var bytes = fs.readAll()
            var value = String.fromBytes(bytes, "UTF-8")
            return new SslCert(value)
        }
    }    
}